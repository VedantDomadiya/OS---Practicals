#Practical 4
#AIM: Write a shell script to find factorial of given number n.

fact=1
read -p "Enter a Number to find its factorial : " n
fact=1

if [ $n -le 0 ]
    then
    echo "Invalid Number"
    exit
fi

a=$n

while [ $a -ge 1 ]
do
    fact=`expr $fact \* $a`
    a=`expr $a - 1`
done
echo "Factorial of $n is : $fact"

