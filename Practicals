#Practical 6

#AIM: Write a shell script which will generate first n Fibonacci numbers like: 1, 1, 2, 3, 5, 13,...

read -p "Enter the value of n " n
x=0
y=1
i=2

echo "Fibonacci sequence upto $n is "
echo $x
echo $y

while [ $i -le $n ]
do
    i=`expr $i + 1`
    z=`expr $x + $y`
    echo $z
    x=$y
    y=$z
done

