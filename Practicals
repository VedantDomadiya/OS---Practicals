#Practical 5

#AIM: Write a shell script which will accept a number b and display first n prime numbers as output.

read -p "Enter the value of n " n
m=2

while [ $m -le $n ]
do
    flag=0
    i=2
    while [ $i -le `expr $m / 2` ]
    do
        if [ `expr $m % $i` -eq 0 ]
        then
            flag=1
            break
        fi
        i=`expr $i + 1`
    done
    if [ $flag -eq 0 ]
    then
        echo $m
    fi
    m=`expr $m + 1`
done

